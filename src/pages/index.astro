---
import Header from '../components/Header.astro';
import Layout from '../layouts/Layout.astro';
import RoundedChip from '../components/RoundedChip.astro';

type Project = {
    title: string;
    description: string;
    liveLink: string;
    githubLink?: string;
};

const skills = [
    { label: 'JavaScript', icon: 'javascript' },
    { label: 'TypeScript', icon: 'typescript' },
    { label: 'React', icon: 'react' },
    { label: 'Next.js', icon: 'nextjs' },
    { label: 'Node.js', icon: 'nodejs' },
    { label: 'GraphQL', icon: 'graphql' },
    { label: 'Docker', icon: 'docker' },
    { label: 'AWS', icon: 'aws' },
    { label: 'Kubernetes', icon: 'kubernetes' },
    { label: 'PostgreSQL', icon: 'postgresql' },
    { label: 'MongoDB', icon: 'database' },
    { label: 'MySQL', icon: 'database' },
    { label: 'Redis', icon: 'redis' },
    { label: 'Kafka', icon: 'kafka' },
];

const socialLinks = [
    { label: 'Github', link: 'https://github.com/Akshaygore1' },
    { label: 'Twitter', link: 'https://x.com/akshaygore2301' },
    { label: 'LinkedIn', link: 'https://www.linkedin.com/in/akshaygore2301/' },
    { label: 'Email', link: 'mailto:akshaygore2301@gmail.com' },
];

const projectsData: Project[] = [
    {
        title: 'You Course',
        description: 'Convert YouTube videos into structured courses effortlessly',
        liveLink: 'https://youcourse.vercel.app',
        githubLink: 'https://github.com/Akshaygore1/youcourse',
    },
    {
        title: 'Fake Stake',
        description: 'Enjoy real games with virtual currency - risk-free gaming',
        liveLink: 'https://fakestake.vercel.app',
        githubLink: 'https://github.com/Akshaygore1/FakeStake',
    },
];
---

<Layout title='Akshay Gore'>
    <main>
        <div class='container'>
            <div class='headerContainer'>
                <Header title="Hi, I'm Akshay" icon='ðŸ‘‹' />
            </div>
            <p>
                Passionate full-stack developer specializing in JavaScript ecosystems.
                With 2+ years of industry experience, I craft scalable solutions using React and Node.js.
                Let's bring your ideas to life with efficient, impactful applications!
            </p>

            <div class='socials'>
                {socialLinks.map((link) => (
                    <a href={link.link} target='_blank' rel='noopener noreferrer'>
                        {link.label}
                    </a>
                ))}
            </div>

            <div class='headerContainer'>
                <Header title='Currently Working On' icon='ðŸ’»' />
            </div>
            <div class='projects-container'>
                {projectsData.map((project) => (
                    <div class='project-card'>
                        <h3>{project.title}</h3>
                        <p>{project.description}</p>
                        <div class='links'>
                            <a href={project.liveLink} target='_blank' rel='noopener noreferrer'>
                                Live Demo
                            </a>
                            {project.githubLink && (
                                <a href={project.githubLink} target='_blank' rel='noopener noreferrer'>
                                    GitHub Repo
                                </a>
                            )}
                        </div>
                    </div>
                ))}
            </div>

            <div class='headerContainer'>
                <Header title='Experience' icon='ðŸ’¼' />
            </div>
            <div class='experience'>
                <div>Full-stack Developer at Zeliot (2+ years)</div>
                <ul>
                    <li>Built robust services using Node.js, GraphQL, and REST APIs</li>
                    <li>Designed responsive UIs with React and modern frontend tools</li>
                    <li>Implemented AI-driven features to enhance app capabilities</li>
                    <li>Managed teams and coordinated multiple concurrent projects</li>
                </ul>
            </div>

            <div class='headerContainer'>
                <Header title='Skills' icon='âš™ï¸' />
            </div>
            <div class='skillsContainer'>
                {skills.map((skill) => (
                    <RoundedChip label={skill.label} icon={skill.icon} />
                ))}
            </div>
        </div>
    </main>
</Layout>

<style>
    main {
        margin: auto;
        width: 800px;
        max-width: calc(100% - 2rem);
        color: white;
        font-size: 20px;
        line-height: 1.6;
    }

    .container {
        display: flex;
        flex-direction: column;
        padding-top: 24px;
        gap: 24px;
    }

    .headerContainer {
        padding: 16px 0;
        margin-bottom: 16px;
    }

    p {
        font-size: 16px;
        line-height: 1.8;
        margin-bottom: 16px;
    }

    .skillsContainer {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
    }

    ul {
        margin: 8px 0;
        padding-left: 20px;
        list-style-type: square;
        font-size: 14px;
        line-height: 1.8;
    }

    .socials {
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
        margin-bottom: 24px;
    }

    a {
        color: inherit;
        text-decoration: underline;
        font-size: 14px;
        line-height: 1.6;
    }

    .projects-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 24px;
        margin-bottom: 24px;
    }

    .project-card {
        border-radius: 8px;
        padding: 16px;
        background-color: rgba(255, 255, 255, 0.05);
    }

    .project-card h3 {
        font-size: 18px;
        margin: 0 0 8px 0;
    }

    .project-card p {
        font-size: 14px;
        color: rgb(200, 200, 200);
        margin: 0 0 12px 0;
    }

    .links a {
        margin-right: 12px;
        color: #ddd;
        text-decoration: underline;
        font-size: 12px;
    }

    .links a:hover {
        text-decoration: none;
    }
</style>