---
interface Props {
	title: string;
}

const { title } = Astro.props;
import '@fontsource/geist-sans';
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Astro description' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class='navbar'>
			<a href='/'>home</a>
			<a href='/blogs'>blogs</a>
			<a href='/projects'>projects</a>
		</div>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		background: #13151a;
		background-size: 224px;
	}
	body {
		font-family: 'Geist Sans', sans-serif;
		margin: auto;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
		padding-bottom: 24px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	.navbar {
		display: flex;
		justify-content: flex-start;
		align-items: center;
		padding: 20px 0px;
		color: aliceblue;
		gap: 14px;
		padding: 1rem;
	}
	a {
		color: inherit;
		text-decoration: none;
		font-size: 16px;
		line-height: 1.6;
	}
</style>
